{
  "name": "azaharizaman/controlled-number",
  "description": "A Laravel 12 Composer package for configurable serial number generation with optional audit logging and model integration.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Azahari Zaman",
      "email": "azaharizaman@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^12.0",
    "illuminate/database": "^12.0",
    "illuminate/console": "^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "AzahariZaman\\ControlledNumber\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AzahariZaman\\ControlledNumber\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AzahariZaman\\ControlledNumber\\ControlledNumberServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text",
    "test:coverage-html": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage-report",
    "test:coverage-clover": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-clover coverage.xml"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}